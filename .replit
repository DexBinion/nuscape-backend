modules = ["python-3.11", "rust", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_object_storage==1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["libxcrypt", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "NuScape FastAPI Server"

[[workflows.workflow]]
name = "NuScape FastAPI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn backend.main:app --host 0.0.0.0 --port 5000 --reload"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "uvicorn backend.main:app --host 0.0.0.0 --port 5000"]
